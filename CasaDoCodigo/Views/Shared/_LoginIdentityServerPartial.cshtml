@{
    string nomeUsuario = User.FindFirst("name")?.Value; //?. serve para não gerar excessão caso sej retornado um valor nulo
    var Claims = User.Claims.ToList();
}

@if (!string.IsNullOrWhiteSpace(nomeUsuario))
{
    <form asp-controller="Conta" asp-action="Logout" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a>Olá, @(nomeUsuario)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Sair</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Conta" asp-action="Login" class="btn btn-link navbar-btn navbar-link">Entrar</a></li>
    </ul>
}